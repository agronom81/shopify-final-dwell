{% assign block_settings = block.settings %}
{% if block_settings.type_preset == 'custom' %}
  {% assign summary_font_family = block_settings.font %}
  {% assign summary_font_style = block_settings.line_height %}
  {% assign summary_font_weight = block_settings.font_weight %}
  {% assign summary_font_size = block_settings.font_size %}
  {% assign summary_font_line_height = block_settings.line_height %}
  {% assign summary_font_case = block_settings.case %}
{% else %}
  {% capture summary_font_family %}var(--font-{{ block_settings.type_preset }}--family){% endcapture %}
  {% capture summary_font_style %}var(--font-{{ block_settings.type_preset }}--style){% endcapture %}
  {% capture summary_font_weight %}var(--font-{{ block_settings.type_preset }}--weight){% endcapture %}
  {% capture summary_font_size %}var(--font-{{ block_settings.type_preset }}--size){% endcapture %}
  {% capture summary_font_line_height %}var(--font-{{ block_settings.type_preset }}--line-height){% endcapture %}
  {% capture summary_font_case %}var(--font-{{ block_settings.type_preset }}--case){% endcapture %}
{% endif %}
<div
  class="accordion accordion--{{ block.id }} accordion--{{ block_settings.icon }} border-style spacing-style{% if block_settings.inherit_color_scheme == false %} color-{{ block_settings.color_scheme }}{% endif %}{% if block_settings.dividers %} accordion--dividers{% endif %}"
  style="
    --summary-font-family: {{ summary_font_family }};
     --summary-font-style: {{ summary_font_style }};
     --summary-font-weight: {{ summary_font_weight }};
     --summary-font-size: {{ summary_font_size }};
     --summary-font-line-height: {{ summary_font_line_height }};
     --summary-font-case: {{ summary_font_case }};
     --accordion-padding-inline-start: {{ block_settings.padding-inline-start }}px;
     --accordion-padding-inline-end: {{ block_settings.padding-inline-end }}px;
     --accordion-row-background: {{ block_settings.overlay_color }};
     --style-border-width: {{ block_settings.divider_height }}px;
     --color-border: {{ block_settings.divider_color }};
    {% render 'spacing-style-accordion', settings: block_settings %}
    {% render 'border-override', settings: block_settings %}
  "
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% stylesheet %}
  .accordion {
    flex: 1;
    width: 100%;
  }

  accordion-custom .details[open] summary {
    color: var(--color-primary-hover);
  }

  .accordion--dividers accordion-custom:not(:first-child) .details {
    border-block-start: var(--style-border-width) solid var(--color-border);
  }

  /* When accordion borders are not set, show fallback borders */
  .accordion--dividers {
    /* stylelint-disable-next-line declaration-property-value-disallowed-list */
    --show-fallback-borders: 0;
  }

  .accordion--dividers:not([class*='color-'])[style*='--border-width: 0'],
  .accordion--dividers:not([class*='color-'])[style*='--border-style: none'] {
    --show-fallback-borders: 1;
  }

  .accordion--caret .icon-plus,
  .accordion--plus .icon-caret {
    display: none;
  }

  /* because we can't pass apply a specific class on a block based on its parent block setting */
  .accordion .details__header {
    font-family: var(--summary-font-family);
    font-style: var(--summary-font-style);
    font-weight: var(--summary-font-weight);
    font-size: var(--summary-font-size);
    line-height: var(--summary-font-line-height);
    text-transform: var(--summary-font-case);
    min-height: var(--minimum-touch-target);
  }
{% endstylesheet %}

